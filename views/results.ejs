<%if(results===undefined) {%>
    <h3>No Movies Found</h3>
    <small>check your spelling and punctuation and try again</small>
    <%} else {%>
        <ul>
            <%results.forEach(function(result) {%>
                <li>
                    <a href="/movies/<%=result.imdbID%>">
                        <%=result.Title%>
                    </a>
                    <small>(<%=result.Type%>)</small>
                </li>
                <%})%>
        </ul>
        <%}%>